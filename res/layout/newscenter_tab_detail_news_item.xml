<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp" >

    <ImageView
        android:id="@+id/iv_newscenter_tab_detail_news_item_icon"
        android:layout_width="90dp"
        android:layout_height="65dp"
        android:background="@android:color/darker_gray"
        android:padding="1dp"
        android:scaleType="fitXY"
        android:layout_centerVertical="true"
        android:src="@drawable/news_pic_default" />

    <TextView
        android:id="@+id/tv_newscenter_tab_detail_news_item_title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/iv_newscenter_tab_detail_news_item_icon"
        android:lines="2"
        android:text="我是默认的标题信息"
        android:textColor="#000000"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/tv_newscenter_tab_detail_news_item_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/tv_newscenter_tab_detail_news_item_title"
        android:layout_below="@id/tv_newscenter_tab_detail_news_item_title"
        android:layout_toRightOf="@id/iv_newscenter_tab_detail_news_item_icon"
        android:text="2015-09-09 09:09:09"
        android:textColor="@android:color/darker_gray"
        android:textSize="16sp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:src="@drawable/icon_news_comment_num" />

</RelativeLayout>