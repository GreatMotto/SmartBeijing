<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <com.weige.smart.view.NoScrollViewPager
        android:id="@+id/nsvp_main_home"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1" >
    </com.weige.smart.view.NoScrollViewPager>

    <RadioGroup
        android:id="@+id/rg_main_home"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bottom_tab_bg"
        android:orientation="horizontal" >

        <RadioButton
            android:id="@+id/rb_main_home_tab_home"
            style="@style/main_home_tab_style"
            android:drawableTop="@drawable/main_home_home_tab_bg"
            android:text="首页" />
        <RadioButton
            android:id="@+id/rb_main_home_tab_newscenter"
            style="@style/main_home_tab_style"
            android:drawableTop="@drawable/main_home_newscenter_tab_bg"
            android:text="新闻中心" />
        <RadioButton
            android:id="@+id/rb_main_home_tab_smartservice"
            style="@style/main_home_tab_style"
            android:drawableTop="@drawable/main_home_smartservice_tab_bg"
            android:text="智慧服务" />
        <RadioButton
            android:id="@+id/rb_main_home_tab_govaffairs"
            style="@style/main_home_tab_style"
            android:drawableTop="@drawable/main_home_govaffairs_tab_bg"
            android:text="政务" />
        <RadioButton
            android:id="@+id/rb_main_home_tab_settings"
            style="@style/main_home_tab_style"
            android:drawableTop="@drawable/main_home_settings_tab_bg"
            android:text="设置" />

        
    </RadioGroup>

</LinearLayout>